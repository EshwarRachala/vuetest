 {
     "files.eol": "\n",
     "eslint.enable": true,
     "git.enabled": true,
     "eslint.autoFixOnSave": true,
     "editor.fontSize": 16,
     "eslint.options": {
         "env": {
             "node": true,
             "es6": true
         },
         "extends": "vue",
         "parserOptions": {
             "sourceType": "module"
         },
         "rules": {
             "indent": [
                 "warn",
                 4
             ],
             "linebreak-style": [
                 "warn",
                 "unix"
             ],
             "quotes": [
                 "error",
                 "single"
             ],
             "semi": [
                 "warn",
                 "never"
             ],
             "space-before-function-paren": [
                 "warn",
                 "never"
             ],
             "eol-last": [
                 "warn",
                 "never"
             ]
         }
     }
 }